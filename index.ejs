<%- include ("partials/header.ejs") %>

<body>
  <%- include ("partials/navbar.ejs") %>

  <div class="container">
    <hr>
    <h1 id="labelQuestion">Ask something </h1>
    <a href="/asking" class="btn btn-primary">Ask Sender</a>
    <hr>
    <% questions.forEach(question => { %>
    <div class="card">
      <div class="card-body">
        <h1><%= question.title %></h1>
      </div>
      <div class="card-footer">
        <a href="/asking/<%= question.id  %>"><button class="btn btn-primary">Answer</button></a>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include ("partials/footer.ejs") %>